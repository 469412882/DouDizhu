<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

    >





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="#fff"
        android:paddingLeft="40px"
        android:paddingRight="40px">

        <ImageView
            android:id="@+id/img_background"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/yy_02"
                android:textSize="50px"/>

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/yy_03"
                android:textSize="35px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relay_01"
                android:layout_width="195px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_down"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/down_apk_bg"
                    android:gravity="center"
                    android:text="下载"
                    android:textColor="@color/yy_04"
                    android:textSize="35px"/>

                <RelativeLayout
                    android:id="@+id/relay_pro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/pbProgress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progressDrawable="@drawable/progressbar_horizontal2"
                        android:visibility="visible"/>
                    />

                    <TextView
                        android:id="@+id/tv_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="下载"
                        android:textColor="@color/yy_04"
                        android:textSize="35px"/>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_wuxin"/>

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_wuxin"/>

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_wuxin"/>

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_wuxin"/>

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_wuxin"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#f5f5f5"/>

    <ImageView
        android:id="@+id/img_bottom"
        android:layout_width="800px"
        android:layout_height="200px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_lllll"
        android:visibility="gone"/>
</LinearLayout>
